<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robotic_arm">

  <material name="dark_grey"><color rgba="0.2 0.2 0.2 1"/></material>
  <material name="orange"><color rgba="1.0 0.5 0 1"/></material>
  <material name="silver"><color rgba="0.8 0.8 0.8 1"/></material>

  <link name="world"/>
  <joint name="world_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <geometry><cylinder length="0.1" radius="0.12"/></geometry>
      <material name="dark_grey"/>
    </visual>
    <collision>
      <geometry><cylinder length="0.1" radius="0.12"/></geometry>
    </collision>
  </link>

  <joint name="joint_1" type="continuous">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="shoulder_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry><cylinder length="0.1" radius="0.08"/></geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry><cylinder length="0.1" radius="0.08"/></geometry>
    </collision>
  </link>

  <joint name="joint_2" type="revolute">
    <parent link="shoulder_link"/>
    <child link="upper_arm"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="50.0" velocity="1.0"/>
  </joint>

  <link name="upper_arm">
    <visual>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry><box size="0.06 0.06 0.4"/></geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry><box size="0.06 0.06 0.4"/></geometry>
    </collision>
  </link>

  <joint name="joint_3" type="revolute">
    <parent link="upper_arm"/>
    <child link="forearm"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.0" upper="2.0" effort="30.0" velocity="1.5"/>
  </joint>

  <link name="forearm">
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry><cylinder length="0.3" radius="0.03"/></geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry><cylinder length="0.3" radius="0.03"/></geometry>
    </collision>
  </link>

  <joint name="gripper_base_joint" type="fixed">
    <parent link="forearm"/>
    <child link="gripper_base"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
  </joint>

  <link name="gripper_base">
    <visual>
      <geometry><box size="0.1 0.1 0.05"/></geometry>
      <material name="dark_grey"/>
    </visual>
    <collision>
      <geometry><box size="0.1 0.1 0.05"/></geometry>
    </collision>
  </link>

  <joint name="left_finger_joint" type="prismatic">
    <parent link="gripper_base"/>
    <child link="left_finger"/>
    <origin xyz="0 0.04 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.04" upper="0.0" effort="10.0" velocity="0.1"/>
  </joint>

  <link name="left_finger">
    <visual>
      <geometry><box size="0.02 0.02 0.08"/></geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <geometry><box size="0.02 0.02 0.08"/></geometry>
    </collision>
  </link>

  <joint name="right_finger_joint" type="prismatic">
    <parent link="gripper_base"/>
    <child link="right_finger"/>
    <origin xyz="0 -0.04 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="0.04" effort="10.0" velocity="0.1"/>
    <mimic joint="left_finger_joint" multiplier="-1.0" offset="0.0"/>
  </joint>

  <link name="right_finger">
    <visual>
      <geometry><box size="0.02 0.02 0.08"/></geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <geometry><box size="0.02 0.02 0.08"/></geometry>
    </collision>
  </link>

  <ros2_control name="RoboticArmHardware" type="system">
    <hardware><plugin>mock_components/GenericSystem</plugin></hardware>
    <joint name="joint_1">
      <command_interface name="position"/><state_interface name="position"/>
    </joint>
    <joint name="joint_2">
      <command_interface name="position"/><state_interface name="position"/>
    </joint>
    <joint name="joint_3">
      <command_interface name="position"/><state_interface name="position"/>
    </joint>
    <joint name="left_finger_joint">
      <command_interface name="position"/><state_interface name="position"/>
    </joint>
    <joint name="right_finger_joint">
      <command_interface name="position"/><state_interface name="position"/>
    </joint>
  </ros2_control>

</robot>