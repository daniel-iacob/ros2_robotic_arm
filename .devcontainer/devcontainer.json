{
    "name": "ros2_robotic_arm",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--net=host",
        "--privileged",
        "-e", "DISPLAY=${env:DISPLAY}",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
        "-v", "${env:HOME}/.Xauthority:/root/.Xauthority:rw"
    ],
    "containerEnv": {
        "XAUTHORITY": "/root/.Xauthority"
    },
    "workspaceFolder": "/ros2_robotic_arm",
    "workspaceMount": "source=${localWorkspaceFolder},target=/ros2_robotic_arm,type=bind",
    "remoteUser": "root",
    "updateRemoteUserUID": true,
    "postStartCommand": "chown -R 1000:1000 /ros2_robotic_arm",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode-remote.remote-containers",
                "ranch-hand-robotics.rde-ros-2",
                "ranch-hand-robotics.urdf-editor",
                "ranch-hand-robotics.rde-pack",
                "ms-python.python",
                "ms-vscode.cpptools",
                "smilerobotics.urdf",
                "redhat.vscode-xml",
                "hadolint.hadolint",
                "ms-vscode.cmake-tools",
                "charliermarsh.ruff",
                "tamasfe.even-better-toml"
            ]
        }
    }
}